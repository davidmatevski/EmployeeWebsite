<div class="row">
    <div class="col-md-12">
        <h2>{{data.departmentName}} - Employee: {{ data.departmentId}}</h2>
        <hr />
        <form method="post" action="/department/update">
            <fieldset>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="departmentName">Department Name:</label>
                            <input class="form-control" id="departmentName" name="departmentName" type="text"
                                value="{{data.departmentName}}" />
                        </div>
                    </div>
                    
                </div>
                
                    <input type = "hidden" name = "departmentId" value = "{{data.departmentId}}"/> 
                    
                </div>
                    
            <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />
        </form>
    </div>
</div>